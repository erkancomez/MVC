@model TaskListAllDto
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Reports.Count > 0)
{
    <a asp-action="GetExcel" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-warning btn-sm my-2 mt-2"><i class="fas fa-file-excel mr-2"></i>Excel</a>
    <a asp-action="GetPdf" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-warning btn-sm my-2 mt-2"><i class="fas fa-file-pdf mr-2"></i>Pdf</a>
    <table class=" table table-hover table-sm text-center table-bordered">
        <tr>
            <th colspan="2">@Model.AppUser.Name @Model.AppUser.SurName personelinizin @Model.Name görevine yazmış olduğu raporlar</th>
        </tr>
        <tr>
            <th>Tanım</th>
            <th>Detay</th>
        </tr>

        @foreach (var report in Model.Reports)
        {
            <tr>
                <td>@report.Describtion</td>
                <td>@report.Detail</td>
            </tr>
        }



    </table>
}
else
{
    <div class=" border border-dark text-center mt-2">
        @Model.AppUser.Name @Model.AppUser.SurName personeliniz şuan da @Model.Name görevi üzerinde çalışıyor. Henüz bir rapor yazmamış.
    </div>
}

