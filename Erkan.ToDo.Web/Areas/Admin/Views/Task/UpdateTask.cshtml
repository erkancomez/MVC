@model TaskUpdateViewModel
@{
    ViewData["Title"] = "UpdateTask";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="UpdateTask" method="post" class="w-75 mx-auto p-3 ">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Ad: </label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama: </label>
        <span asp-validation-for="Explanation" class="text-danger"></span>
        <textarea asp-for="Explanation" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Aciliyet Durumu Seçiniz</label>
        <span asp-validation-for="ImportanceId" class="text-danger"></span>
        <select asp-for="ImportanceId" class="form-control" asp-items="ViewBag.Importances">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-info" btn-sm><i class="far fa-check-circle mr-2"></i>Kaydet</button>
</form>


@section JavaScript{

    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}