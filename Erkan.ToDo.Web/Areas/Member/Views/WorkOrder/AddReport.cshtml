@model ReportAddDto
@{
    ViewData["Title"] = "AddReport";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<form method="post" asp-action="AddReport" class="p-3">
    <div class="card text-white bg-primary my-3">
        <div class="card-header">@Model.Task.Name</div>
        <div class="card-body">
            <h4 class="card-title">Görevin Aciliyet Durumu: @Model.Task.Importance.Definition</h4>
            <p class="card-text">Görevin Açıklaması: @Model.Task.Explanation</p>
        </div>
    </div>
    <input type="hidden" asp-for="TaskId" />
    <div class="form-group">
        <label asp-for="Describtion">Tanım: </label>
        <span asp-validation-for="Describtion" class="text-danger"></span>
        <input asp-for="Describtion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Detail">Detay: </label>
        <span asp-validation-for="Detail" class="text-danger"></span>
        <textarea asp-for="Detail" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-warning btn-sm"><i class="fas fa-chevron-circle-left mr-2"></i>Vazgeç</a>
        <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>
    </div>
</form>

@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}