@model ReportAddViewModel
@{
    ViewData["Title"] = "AddReport";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<form method="post" asp-action="AddReport" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="TaskId" />
    <div class="form-group">
        <label asp-for="Definition"></label>
        <span asp-validation-for="Definition" class="text-danger"></span>
        <input asp-for="Definition" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Detail"></label>
        <span asp-validation-for="Detail" class="text-danger"></span>
        <textarea asp-for="Detail" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>
    </div>
</form>

@section JavaScript{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}